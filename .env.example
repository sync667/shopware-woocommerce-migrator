# ============================================================
# Application
# ============================================================
APP_NAME="SW→WC Migrator"
APP_ENV=local
APP_KEY=                          # Generate with: php artisan key:generate
APP_DEBUG=true
APP_URL=http://localhost
APP_VERSION=1.0.0
APP_BUILD=1

# Frontend origin used in CORS and Inertia SSR
FRONTEND_URL=http://localhost:8780
# Port the Vite dev server binds to (inside Docker: exposed to host)
VITE_PORT=8773

# ============================================================
# Logging
# ============================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================
# Application Database (MySQL — stores migration state)
# ============================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=migrator_app
DB_USERNAME=root
DB_PASSWORD=root

# ============================================================
# Cache, Queues & Sessions (Redis recommended)
# ============================================================
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
CACHE_PREFIX=laravel_cache
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis            # Use "database" if Redis is unavailable
SESSION_DRIVER=redis
SESSION_LIFETIME=1440             # Minutes (1440 = 24 h)

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# ============================================================
# Mail (Mailpit in Docker for local development)
# ============================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================
# AWS S3 (optional — only needed for S3 filesystem disk)
# ============================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ============================================================
# Laravel Horizon (queue dashboard)
# ============================================================
HORIZON_NAME="${APP_NAME}"
HORIZON_PREFIX="${APP_NAME}_horizon:"

# ============================================================
# Shopware 6 Source — MySQL connection
#
# The migrator connects directly to the Shopware database.
# Use an SSH tunnel if the DB is not publicly reachable:
#   ssh -L 3307:shopware-db-host:3306 user@ssh-jump-host
# then set SHOPWARE_DB_HOST=127.0.0.1 and SHOPWARE_DB_PORT=3307
# ============================================================
SHOPWARE_DB_HOST=
SHOPWARE_DB_PORT=3306
SHOPWARE_DB_DATABASE=
SHOPWARE_DB_USERNAME=
SHOPWARE_DB_PASSWORD=

# Shopware language UUID (hex, lowercase, no hyphens)
# Find with: SELECT LOWER(HEX(id)) FROM language WHERE name = 'English';
SHOPWARE_LANGUAGE_ID=

# Shopware "Live" version UUID (hex, lowercase, no hyphens)
# Find with: SELECT LOWER(HEX(id)) FROM version WHERE name = 'Live';
SHOPWARE_LIVE_VERSION_ID=

# Public base URL of the Shopware store (used to build media/image URLs)
SHOPWARE_BASE_URL=

# ============================================================
# WooCommerce Target — REST API v3
#
# Generate keys at: WooCommerce → Settings → Advanced → REST API
# Required scope: Read/Write
# ============================================================
WOO_BASE_URL=
WOO_CONSUMER_KEY=
WOO_CONSUMER_SECRET=

# WordPress application password (for Media Library uploads)
# Create at: WordPress → Users → Your Profile → Application Passwords
WP_USERNAME=
WP_APP_PASSWORD=
